#/bin/bash

pushd $(dirname "${BASH_SOURCE[0]}") >/dev/null
test_dir="$PWD"
popd >/dev/null

. "$test_dir/tools"


mktmps TMPDIR
mkvars PYTHON3_VERSION

cp "$test_dir/compile/Makefile" $TMPDIR
cp "$test_dir/compile/python3-test.py" $TMPDIR

cd $TMPDIR
if docker run -v "$TMPDIR:/usr/src/myapp" --rm icpc/kattis/python3:latest /bin/bash -c "make python3-test && ./python3-test" | grep v${PYTHON3_VERSION}
then
        echo ok
        exit 0
else
        exit 1
fi
