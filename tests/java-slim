#/bin/bash

pushd $(dirname "${BASH_SOURCE[0]}") >/dev/null
test_dir="$PWD"
popd >/dev/null

. "$test_dir/tools"


mktmps TMPDIR
mkvars JAVA_VERSION

cp "$test_dir/compile/Makefile" $TMPDIR
cp "$test_dir/compile/JavaTest.java" $TMPDIR

cd $TMPDIR
TEST_JAVA_VERSION=$("$test_dir/../bin/java-docker" /bin/bash -c "make JavaTest >/dev/null && ./JavaTest ")
if echo "$TEST_JAVA_VERSION" | grep v${JAVA_VERSION}
then
        echo ok
        exit 0
else
	echo "unexpected version: $TEST_JAVA_VERSION."
        exit 1
fi
