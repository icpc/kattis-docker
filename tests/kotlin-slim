#/bin/bash

pushd $(dirname "${BASH_SOURCE[0]}") >/dev/null
test_dir="$PWD"
popd >/dev/null

. "$test_dir/tools"


mktmps TMPDIR
mkvars KOTLIN_VERSION

cp "$test_dir/compile/Makefile" $TMPDIR
cp "$test_dir/compile/KotlinTest.kt" $TMPDIR

cd $TMPDIR
if docker run -v "$TMPDIR:/usr/src/myapp" --rm icpc/kattis/java:latest /bin/bash -c "make KotlinTest && ./KotlinTest" | grep v${KOTLIN_VERSION}
then
        echo ok
        exit 0
else
        exit 1
fi
