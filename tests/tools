
TMPDIRS=()

function mktmps {
    local var
    for var in "$@"
    do 
      local TAG=$(dd bs=1024 count=1 if=/dev/urandom of=/dev/stdout 2>/dev/null | openssl sha256 | tail -1 | sed -e 's/(stdin)= //')
      local TMP="$test_dir/tmp/$TAG"
      mkdir -p "$TMP"
      TM3PDIRS+=("$TMP")
      eval $var="$TMP"
    done
}

function cleanup {
  /bin/rm -rf "${TMPDIRS[@]}"
}
trap cleanup EXIT

function mkvars {
    local var
    for var in "$@"
    do
      local value=$(cd "$test_dir/compile" && make -p -n null | egrep "^$1 = " | sed -e "s/^$1 = //")
      eval $var="$value"
    done
}


